<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

    </style>

    <style name="btnHome" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorBlack</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="btnVer" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/upiita_dorado</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="btnSubir" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/azul_subir</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="AppTheme.TransNav" parent="AppTheme" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />




</resources>
